<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <!-- The master actor (with some arguments) -->
  <actor host="Overwatch" function="master">
    <argument value="3"/>         <!-- Number of workers -->
  </actor>
  <!-- The worker processes (with mailbox to listen on as argument) -->
  <actor host="Reaper" function="worker" on_failure="RESTART">
    <argument value="0"/>
    <argument value="3"/>
  </actor>
  <actor host="Mercy" function="worker" on_failure="RESTART">
    <argument value="1"/>
    <argument value="3"/>
  </actor>
  <actor host="Reinhardt" function="worker" on_failure="RESTART">
    <argument value="2"/>
    <argument value="3"/>
  </actor>
</platform>
