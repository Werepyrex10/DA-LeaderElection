<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <zone id="zone0" routing="Full">
    <host id ="Overwatch" speed="100Mf"/>
    <host id="Reaper" speed="100Mf"/>
    <host id="Mercy" speed="100Mf"/>
    <host id="Reinhardt" speed="100Mf"/>

    <link id="loopback" bandwidth="500MBps" latency="0us"/>
    <link id="0" bandwidth="100MBps" latency="0us"/>
    <link id="1" bandwidth="100MBps" latency="0us"/>
    <link id="2" bandwidth="100MBps" latency="0us"/>
    <link id="3" bandwidth="100MBps" latency="0us"/>
    <link id="4" bandwidth="100MBps" latency="0us"/>
    <link id="5" bandwidth="100MBps" latency="0us"/>

    <route src="Overwatch" dst="Overwatch">
      <link_ctn id="loopback"/>
    </route>
      <route src="Mercy" dst="Mercy">
      <link_ctn id="loopback"/>
    </route>
      <route src="Reinhardt" dst="Reinhardt">
      <link_ctn id="loopback"/>
    </route>
      <route src="Reaper" dst="Reaper">
      <link_ctn id="loopback"/>
    </route>
    <route src="Overwatch" dst="Reaper">
      <link_ctn id="0"/>
    </route>
    <route src="Overwatch" dst="Mercy">
      <link_ctn id="1"/>
    </route>
    <route src="Overwatch" dst="Reinhardt">
      <link_ctn id="2"/>
    </route>
    <route src="Reaper" dst="Mercy">
      <link_ctn id="3"/>
    </route>
    <route src="Reaper" dst="Reinhardt">
      <link_ctn id="4"/>
    </route>
    <route src="Reinhardt" dst="Mercy">
      <link_ctn id="5"/>
    </route>
  </zone>
</platform>
